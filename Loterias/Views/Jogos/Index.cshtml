@model IEnumerable<Loteria.Model.Jogo>

@{
    ViewData["Title"] = "Index";
}

<h1>Jogos</h1>

<p>
    <a asp-action="Adicionar" class="btn btn-primary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoJogo.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataConcurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroConcurso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoJogo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataConcurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroConcurso)
            </td>
            <td>
                @Html.ActionLink("Detalhar", "Detalhar", new { id = item.Id }) |
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                <Excluir Url="@Url.Action("Excluir", "Jogos", new { id = item.Id })"></Excluir>
            </td>
        </tr>
}
    </tbody>
</table>
